  },
  "repository": {
    "type": "git",
    "url": "git://github.com/alexindigo/stripbom.git"
  },
  "bugs": {
    "url": "https://github.com/alexindigo/stripbom/issues"
  },
  "author": "Alex Indigo <iam@alexindigo.com>",
  "keywords": [
