    "remove",
    "delete",
    "trim",
    "text",
    "string",
    "node",
    "0.10",
    "0.12"
  ],
  "devDependencies": {
    "coveralls": "^2.11.12",
    "eslint": "^3.2.0",
    "istanbul": "^0.4.4",
    "pre-commit": "^1.1.3",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.0"
  }
